<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/etiqSensorDeMovimiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SensorDeMovimiento">
    </TextView>

    <TextView
        android:id="@+id/sensorDeMovimiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="hello">
    </TextView>
    <TextView
        android:id="@+id/etiqSensorDeOrientacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SensorDeOrientacion">
    </TextView>
    <TextView
        android:id="@+id/sensorDeOrientacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="hello">
    </TextView>

</LinearLayout>