<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Tabla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="@color/black"

    >

    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/seccion11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Column 1"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/seccion12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Column 2" />
    </TableRow>
    <TableRow
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/seccion21"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center"
            android:text="Column 1 y 2"
            android:textColor="@color/white"/>
    </TableRow>
    <TableRow
        android:id="@+id/separador"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

    <FrameLayout
        android:id="@+id/linaSeparador"
        android:layout_width="fill_parent"
        android:layout_height="10px"
        android:layout_span="3"
        android:background="#FF0000"
        />
    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/seccion31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Column 1"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/seccion32"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Column 2" />

        <Button
            android:id="@+id/seccion33"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Column 3" />
    </TableRow>
    <TableRow
        android:id="@+id/row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/seccion43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="center"
            android:text="Column 3"
            />
    </TableRow>

    <TableRow
        android:id="@+id/row5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/seccion53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="center"
            android:text="Column 3"
            />
    </TableRow>


</TableLayout>
